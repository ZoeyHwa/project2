generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Photo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  imageUrl    String
  dateTaken   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 可選的額外字段
  category    String?
  tags        String[]
  
  @@map("photos")
}